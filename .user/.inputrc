## ~/.inputrc ::

# TODO: uniform bindings: bash, qutebrowser, vim, python, less, info, w3m, ipython, newsboat, firefox (vimium), tmux, ranger, mocp, vifm, irssi, zsh, zathura, i3, ...

set bell-style none
set colored-stats on
set keyseq-timeout 10
set mark-symlinked-directories on
set show-mode-in-prompt on
set emacs-mode-string \1\e[1;38;5;10m\2~\1\e[0m\2
set vi-ins-mode-string \1\e[1;38;5;10m\2:\1\e[0m\2
set vi-cmd-mode-string \1\e[1;38;5;10m\2-\1\e[0m\2
set editing-mode vi

set keymap vi-command
"()": "A)\eI $(\eI"
"\C-a": beginning-of-line
"\C-b": backward-char
"\C-d": delete-char
"\C-e": end-of-line
"\C-f": forward-char
"\C-j": next-history
"\C-k": previous-history
"\C-l": "ddiclear\C-m"
"\ea": beginning-of-history
"\ee": end-of-history
"\ev": edit-and-execute-command
"\ex": backward-kill-line
"ciW": "lBcW"
"ciw": "lbcw"
"diW": "lBdW"
"diw": "lbdw"
"yiW": "lByW"
"yiw": "lbyw"
"|": "A | "
Tab: complete

set keymap vi-insert
"\C-a": beginning-of-line
"\C-b": backward-char
"\C-d": delete-char
"\C-e": end-of-line
"\C-f": forward-char
"\C-j": next-history
"\C-k": previous-history
"\C-l": "\e\eddiclear\C-m"
"\ea": beginning-of-history
"\eb": backward-word
"\ed": kill-word
"\ee": end-of-history
"\ef": forward-word
"\eg": shell-backward-word
"\er": backward-kill-word
"\eu": kill-line
"\ev": edit-and-execute-command
"\ew": shell-forward-word
"\ex": backward-kill-line
Tab: complete
