## ~/.inputrc ::

# TODO: uniform bindings: bash, qutebrowser, vim, python, less, info, w3m, ipython, newsboat, firefox (vimium), tmux, ranger, mocp, vifm, irssi, zsh, zathura, i3, ...

set bell-style none
set colored-stats on
set mark-symlinked-directories on
set show-mode-in-prompt on
set emacs-mode-string \1\e[1;38;5;10m\2~\1\e[0m\2
set vi-ins-mode-string \1\e[1;38;5;10m\2:\1\e[0m\2
set vi-cmd-mode-string \1\e[1;38;5;10m\2-\1\e[0m\2
set editing-mode vi

set keymap vi-command
"|": "A | "
"()": "A)I $(I"
Control-a: beginning-of-line
Control-b: backward-char
Control-d: delete-char
Control-e: end-of-line
Control-f: forward-char
Control-j: next-history
Control-k: previous-history
Control-l: clear-screen
"G": end-of-history
Tab: complete
"ciW": "lBcW"
"ciw": "lbcw"
"diW": "lBdW"
"diw": "lbdw"
"\e": clear-display
"\eh": "OD"
"\ej": "OB"
"\ek": "OA"
"\el": "OC"
"\ex": backward-kill-line
"gg": beginning-of-history
"yiW": "lByW"
"yiw": "lbyw"

set keymap vi-insert
Control-a: beginning-of-line
Control-b: backward-char
Control-d: delete-char
Control-e: end-of-line
Control-f: forward-char
Control-j: next-history
Control-k: previous-history
Control-l: clear-screen
Tab: complete
"\e": clear-display
"\eb": backward-word
"\ed": kill-word
"\ef": forward-word
"\eg": shell-backward-word
"\eh": "OD"
"\ej": "OB"
"\ek": "OA"
"\el": "OC"
"\er": backward-kill-word
"\eu": kill-line
"\ew": shell-forward-word
"\ex": backward-kill-line
