!! ~/.Xresources ::

#include ".Xtheme"
*.borderWidth: 0

!! urxvt ::
URxvt.depth: 32
URxvt.saveLines: 4096
URxvt.scrollBar: false
! font:
URxvt.font: xft:hack:size=10
URxvt.letterSpace: -1
! control:
!URxvt.perl-ext:
!URxvt.perl-ext-common:
URxvt.scrollWithBuffer: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.secondaryWheel: 1
! shortcuts:
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-V: eval:paste_clipboard
URxvt.keysym.Control-U: command:\033]720;16\007
URxvt.keysym.Control-D: command:\033]721;16\007
URxvt.keysym.Control-P: command:\033]720;64\007
URxvt.keysym.Control-N: command:\033]721;64\007
URxvt*scrollTtyKeypress: true
URxvt*scrollTtyOutput: false

!! xterm ::
XTerm.termName: xterm-256color
XTerm.vt100.utf8: true
XTerm.vt100.saveLines: 4096
XTerm.vt100.scrollBar: false
! font:
!XTerm.vt100.boldColors: false
XTerm.vt100.faceName: Hack
XTerm.vt100.faceSize: 10
! control:
XTerm.ttyModes: erase ^?
XTerm.vt100.backarrowKey: false
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.selectToClipboard: true
! shortcuts:
XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key> equal: larger-vt-font() \n\
    Ctrl Shift <Key> minus: smaller-vt-font() \n\
    Ctrl Shift <Key>B: scroll-back(1,page) \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>D: scroll-forw(1,halfpage) \n\
    Ctrl Shift <Key>F: scroll-forw(1,page) \n\
    Ctrl Shift <Key>N: scroll-forw(1,halfpage) \n\
    Ctrl Shift <Key>P: scroll-back(1,halfpage) \n\
    Ctrl Shift <Key>S: secure() \n\
    Ctrl Shift <Key>U: scroll-back(1,halfpage) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
XTerm.vt100.scrollTtyKeypress: true
XTerm.vt100.scrollTtyOutput: false
!XTerm.buffered: true
